<p id="notice"><%= notice %></p>

<h1>Weapons</h1>

<table>
  <thead>
    <tr>
      <th>Weaponname</th>
      <th>Description</th>
      <th>Power base</th>
      <th>Power step</th>
      <th>Weapon level</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @weapons.each do |weapon| %>
      <tr>
        <td><%= weapon.weaponName %></td>
        <td><%= weapon.description %></td>
        <td><%= weapon.power_base %></td>
        <td><%= weapon.power_step %></td>
        <td><%= weapon.weapon_level %></td>
        <td><%= link_to 'Show', weapon %></td>
        <td><%= link_to 'Edit', edit_weapon_path(weapon) %></td>
        <td><%= link_to 'Destroy', weapon, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

